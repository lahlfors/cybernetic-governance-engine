define bot refuse trade
  "I cannot execute this trade because the amount was not specified by you directly."

define flow check trade amount source
  # This flow mimics the Verifier Agent's logic
  $is_fabricated = execute check_amount_source
  if $is_fabricated
    bot refuse trade
    stop

define flow check trade safety
  # This flow mimics the Safety Node / OPA check
  $is_safe = execute check_safety_policy
  if not $is_safe
    bot refuse trade
    stop
