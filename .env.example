# Fill in your GCP project info and rename this file to ".env".

# --- MODEL CONFIGURATION (Tiered) ---

# Fast Path (Control Plane): Routing, JSON Formatting, Simple Execution
# Recommended: gemini-2.5-flash-lite (SaaS) OR meta-llama/Llama-3.1-8B-Instruct (Open Weights)
MODEL_FAST=gemini-2.5-flash-lite
# Endpoint for Fast Model (if using vLLM/OpenAI-compatible)
VLLM_FAST_API_BASE=http://localhost:8000/v1

# Reasoning Path (Reasoning Plane): Risk Analysis, Strategy, Evaluation
# Recommended: gemini-2.5-pro (SaaS) OR meta-llama/Llama-3.1-70B-Instruct (Open Weights)
MODEL_REASONING=gemini-2.5-pro
# Endpoint for Reasoning Model (if using vLLM/OpenAI-compatible)
# Note: For Open Weights, this should point to a separate vLLM instance hosting the large model (e.g. port 8001)
VLLM_REASONING_API_BASE=http://localhost:8001/v1

# Consensus Path: High-stakes validation (defaults to MODEL_REASONING)
MODEL_CONSENSUS=gemini-2.5-pro

# --- VERTEX AI CONFIGURATION ---
GOOGLE_GENAI_USE_VERTEXAI=1
GOOGLE_CLOUD_PROJECT=<YOUR_PROJECT_ID>
GOOGLE_CLOUD_LOCATION=<YOUR_PROJECT_LOCATION>
GOOGLE_CLOUD_ZONE=<YOUR_PROJECT_ZONE>  # Optional: For Zonal GKE clusters
GOOGLE_CLOUD_STORAGE_BUCKET=<YOUR_STORAGE_BUCKET>  # Only required for deployment on Agent Engine

# --- GOVERNANCE & POLICY ---
# Policy Registry (Offline Pipeline)
POLICY_REGISTRY_BUCKET=<YOUR_POLICY_BUCKET_NAME>
STAMP_CONFIG_BLOB=current_stamp_spec.yaml
OUTPUT_ARTIFACT_URI=gs://<YOUR_POLICY_BUCKET_NAME>/artifacts/latest_evidence.json

# Policy Engine (OPA)
OPA_URL=http://localhost:8181/v1/data/finance/allow

# --- HYBRID INFERENCE (Legacy/Shared Config) ---
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_API_KEY=EMPTY

# --- OBSERVABILITY ---
# Langfuse Configuration (Hot Tier / Agent Tracing)
LANGFUSE_PUBLIC_KEY=<YOUR_PUBLIC_KEY>
LANGFUSE_SECRET_KEY=<YOUR_SECRET_KEY>
LANGFUSE_HOST=https://cloud.langfuse.com

# OpenTelemetry (Cold Tier)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=

# Cold Tier Storage (Parquet)
COLD_TIER_GCS_BUCKET="your-gcs-bucket-name"
COLD_TIER_GCS_PREFIX="cold_tier"

# --- SERVICE CONFIGURATION ---
PORT=8080
GOOGLE_APPLICATION_CREDENTIALS= # Path to service account key (optional for local dev)
